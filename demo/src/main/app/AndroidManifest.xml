<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.juhezi.mediademo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/JetpackSplashTheme">
        <activity
            android:name=".letme.LetmeActivity"
            android:exported="true"
            android:theme="@style/AppTheme.MyApp" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoPlayerActivity"
            android:theme="@style/AppTheme.MyApp" />
        <activity
            android:name=".media.camera.CaptureActivity"
            android:theme="@style/AppTheme.MyApp" />
        <activity
            android:name=".LithoActivity"
            android:theme="@style/AppTheme.MyApp" />
        <activity
            android:name=".broom.activity.V2EXActivity"
            android:theme="@style/AppTheme.MyApp" />
    </application>

</manifest>